;==============================================================
; Polybar configuration
;==============================================================

; The colors used in this polybar configuration
[colors]

#color0 = #182a3a
color0 = ${xrdb:color0}

#color1 = #3c8262
color1 = ${xrdb:color1}

#color5 = #8d8e77
color5 = ${xrdb:color5}

#color7 = #c2c0c3
color7 =  ${xrdb:color7}

color4 = ${xrdb:color4}


[dims]
padding = 2

[bar/top]
;width = 98.5%
;width = 73%
width = 100%

height = 22

;offset-x = 16
;offset-x = 216

offset-y = 0
radius = 2
;monitor = LVDS1

font-0 = bitstream vera sans:pixelsize=11;1
font-1 = FontAwesome:pixelsize=11;1
font-2 = Siji:pixelsize=11;1
;font-3 = unifont:pixelsize=9
;font-4 = Iosevka Medium:size=7;1

background = ${colors.color0}
foreground = ${colors.color7}

border-size = 2
border-color = ${colors.color0}

line-size = 2

modules-left = powermenu bspwm
; xwindow allow

modules-center =
; spotify

modules-right = temperature pulseaudio cpu date
;xkeyboard fan wlan battery

fixed-center = true
wm-restack = bspwm
tray-position = right

; bspwm
[module/bspwm]
type = internal/bspwm

format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Unfocused = Inactive workspace on any monitor
;label-unfocused = %index%
;label-unfocused-background = ${colors.color0}
;label-unfocused-foreground = ${colors.color7}
;label-unfocused-padding = ${dims.padding}

label-focused = %name%
label-focused-background = ${colors.color0}
label-focused-foreground = ${colors.color7}
label-focused-padding = ${dims.padding}

label-urgent = %name%
label-urgent-background = ${colors.color1}
label-urgent-foreground = ${colors.color0}
label-urgent-padding = ${dims.padding}

label-empty = %name%
label-empty-background = ${colors.color0}
label-empty-foreground = ${colors.color1}
label-empty-padding = ${dims.padding}

label-occupied = %name%
label-occupied-background = ${colors.color0}
label-occupied-foreground = ${colors.color7}
label-occupied-padding = ${dims.padding}

format-padding = 0

;allow
[module/allow]
type = custom/text
content = "  | "
content-foreground = ${colors.color4}

;xwindow
[module/xwindow]
type = internal/xwindow
;format-prefix = "  "
format-prefix = "  "

format-prefix-foreground = ${colors.color7}
format-prefix-background = ${colors.color1}

label = "%title:0:35:..% "
label-font = 5
label-foreground = ${colors.color7}
label-background = ${colors.color1}

labal-maxlen = 25
format-pading = 2

;xkeyboard
[module/xkeyboard]
type = internal/xkeyboard
color0list-0 = num lock

format-prefix = " Layout: "
format-prefix-font = 1
format-prefix-foreground = ${colors.color7}
format-prefix-background = ${colors.color1}

label-layout = "%layout%  "
label-layout-font = 1
label-layout-foreground = ${colors.color7}
label-layout-background = ${colors.color1}

format-padding = 2

; Battery
[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
full-at = 95

format-charging = <label-charging>
format-charging-background = ${colors.color5}
format-charging-foreground = ${colors.color0}
format-charging-padding = ${dims.padding}

format-discharging = <label-discharging>
format-discharging-background = ${colors.color1}
format-discharging-foreground = ${colors.color7}
format-discharging-padding = ${dims.padding}

format-full = <label-full>
format-full-background = ${colors.color1}
format-full-foreground = ${colors.color7}
format-full-padding = ${dims.padding}

label-charging = Charging: %percentage%%
label-discharging = BAT: %percentage%%
label-full = Full Capacity

; Date
[module/date]
type = internal/date
interval = 1.0

date = "%Y-%M-%d"
#time = %H:%M:%S
time = %I:%M %p
time-alt = %A, %d-%B-%y

label = %time%
format =  <label>
format-foreground = ${colors.color7}
format-background = ${colors.color0}
format-padding = ${dims.padding}

;temperature
[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 65

format = <ramp> <label>
;format-underline = #f50a4d
format-warn = " <ramp> <label-warn>"
;format-warn-underline = ${self.format-underline}

label = "%temperature-c% "
label-background = ${colors.color0}
label-warn = "%temperature-c% "
label-warn-foreground = ${colors.color1}
label-warn-background = ${colors.color0}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.color1}
;ramp-background = ${colors.color0}

format-padding = 1

[module/wlan]
type = internal/network
interface = wlp36s0
interval = 3.0

format-connected = <ramp-signal><label-connected>
label-connected =  " %downspeed:6%  "
label-connected-background = ${colors.color1}
label-connected-foreground = ${colors.color7}

format-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.color0}
ramp-signal-background = ${colors.color1}

;fan
[module/fan]
type = custom/script
format = "<label>  "
;format-background = ${colors.color0}
format-foreground = ${colors.color1}
exec-if = sensors
exec = "sensors | grep fan1 | awk '{print $2,$3}'"
format-prefix = " "

format-prefix-background = ${colors.color0}
format-prefix-foreground = ${colors.color1}

format-padding = 0

; Volume
[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${colors.color7}
label-volume-background = ${colors.color1}
label-volume-padding = ${dims.padding}

format-muted = <label-muted>
label-muted = "Mute"
label-muted-foreground = ${colors.color7}
label-muted-background = ${colors.color1}
label-muted-padding = ${dims.padding}

; Music module with getmusicstatus
[module/music]
type = custom/script
exec = getmusicstatus
tail = true

format = <label>
format-background = ${colors.color0}
format-foreground = ${colors.color7}
format-padding = ${dims.padding}
label = %output%

;spotify
[module/spotify]

type = custom/script
;exec = ~/.config/polybar/spotify.sh %artist% ‣ %title%
tail = true
exec = ~/.config/polybar/spotify.sh %artist% ▸ %title%

format-background = ${colors.color0}
;format-foreground = ${colors.color1}
format-foreground = ${colors.color7}

;format-prefix = " "
format-prefix = " "
format-prefix-background = ${colors.color0}
format-prefix-foreground = ${colors.color1}
internal = 1

format-padding = 1

;cpu
[module/cpu]
type = internal/cpu
interval = 2
format-padding = ${dims.padding}
format-foreground = ${colors.color1}
format-background = ${colors.color0}
format-prefix = "CPU: "
label = %percentage%%
label-foreground = ${colors.color7}

; powermenu
[module/powermenu]
type = custom/menu

format-spacing = 2

label-open = "    "
;label-open = "「⍴ower」"

;label-open-foreground = ${colors.color1}
label-open-background = ${colors.color0}
label-close =  cancel
label-close-foreground = ${colors.color5}
label-separator = |
label-separator-foreground = ${colors.color7}

menu-0-0 = suspend
menu-0-0-exec = menu-open-1
menu-0-1 = reboot
menu-0-1-exec = menu-open-2
menu-0-2 = power off
menu-0-2-exec = menu-open-3

menu-1-0 = Suspend?
menu-1-0-exec = systemctl suspend

menu-3-0 = Poweroff?
menu-3-0-exec = systemctl poweroff

menu-2-0 = Reboot?
menu-2-0-exec = systemctl reboot
[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = -2

