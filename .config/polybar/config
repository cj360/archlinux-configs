[module/cpu]
type = internal/cpu
interval = 2
format = <label>
label = cpu %percentage:1:3%% 


[module/temperature]
type = internal/temperature
thermal-zone = 0
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon0/temp1_input
base-temperature = 45
warn-temperature = 70
format = temp <label>
format-warn = temp <label-warn>
label = %temperature-c:2:3%C
label-foreground = ${colors.06}
label-warn = %temperature-c:2:3%C
label-warn-foreground = ${colors.01}
interval = 2


[module/memory]
type = internal/memory
interval = 2
format = <label>
label = mem %percentage_used:1:3%%


[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage:2:3%%
format-muted = <label-muted>
label-muted = %{T2}ﱝ%{T-}
ramp-volume-0 = %{T2}%{T-}
ramp-volume-1 = %{T2}%{T-}
ramp-volume-2 = %{T2}%{T-}
ramp-volume-3 = %{T2}墳%{T-}
ramp-volume-4 = %{T2}墳%{T-}
ramp-volume-5 = %{T2}墳%{T-}


[module/date]
type = internal/date
time = %I:%M
time-alt = %b %a %d, %Y
format = <label>
label = %time%
