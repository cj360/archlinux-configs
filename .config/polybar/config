bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #f90000
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp9s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
;format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp10s0
interval = 3.0

;format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%D"

time = %I:%M
time-alt = %z %Z

;format-prefix =  
format-prefix-foreground = ${colors.foreground}
;format-underline = #0a6cf5

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = 
label-volume-foreground = ${colors.foreground}

format-muted-prefix = ""
format-muted-foreground = ${colors.foreground-alt}
label-muted = " MUTE" 

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.foreground}
bar-volume-foreground-1 = ${colors.foreground}
bar-volume-foreground-2 = ${colors.foreground} 
bar-volume-foreground-3 = ${colors.foreground}
bar-volume-foreground-4 = ${colors.foreground}
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = ┫
bar-volume-indicator-font = 2
bar-volume-fill = ━
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu

label-open = ""
label-open-font = 6
label-open-foreground = ${xrdb:color1}
label-open-background = ${xrdb:color0}
label-close = 
label-close-foreground = ${xrdb:color7}
label-close-background = ${xrdb:color0}
label-separator = " "
label-separator-foreground = ${xrdb:color1}
label-separator-background = ${xrdb:color0}

; lock
menu-0-0 = "  "
menu-0-0-exec = i3lock -i ~/Pictures/adtr_bg.png -l '#ffffff' -e
menu-0-0-foreground = ${xrdb:color7}
menu-0-0-background = ${xrdb:color0}
; sleep
menu-0-1 = "  "
menu-0-1-exec = i3lock -i ~/Pictures/adtr_bg.png -l '#ffffff' -e && echo mem > /sys/power/state
menu-0-1-foreground = ${xrdb:color7}
menu-0-1-background = ${xrdb:color0}
; logout
menu-0-2 = "  "
menu-0-2-exec = bspc quit
menu-0-2-foreground = ${xrdb:color7}
menu-0-2-background = ${xrdb:color0}
; reboot
menu-0-3 = "  "
menu-0-3-exec = systemctl reboot
menu-0-3-foreground = ${xrdb:color7}
menu-0-3-background = ${xrdb:color0}
; shutdown
menu-0-4 = " "
menu-0-4-exec = systemctl poweroff
menu-0-4-foreground = ${xrdb:color7}
menu-0-4-background = ${xrdb:color0}
; end stripe
menu-0-5 = " "
menu-0-5-font = 6
menu-0-5-foreground = ${xrdb:color1}
menu-0-5-background = ${xrdb:color0}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

; Custom modules
[module/pac-updates]
type = custom/script
exec = /usr/local/bin/pac-updates.sh
click-middle = /usr/local/bin/pac-updates.sh
label = %output%
interval = 30

[module/weather]
type = custom/script
exec = /usr/local/bin/weather.sh
click-middle = /usr/local/bin/weather.sh
label = %output%
interval = 1800

[module/power-menu]
type = custom/text
content = 
content-foreground = ${colors.highlight}
click-left = /home/andrew/.config/polybar/power_menu.sh

[module/vpn]
type = custom/script
exec = /usr/local/bin/vpn.sh
click-middle = /usr/local/bin/vpn.sh
label = 
interval = 5

[module/current-song]
type = custom/script
exec = echo $(mpc current) | sed s/\;/,\ /g | cut -d - -f 1,2
click-left = mpc prev
click-middle = mpc toggle
click-right = mpc next
label = %output%
interval = 1

