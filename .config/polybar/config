[module/bspwm]
type = internal/bspwm
format = <label-state>
;label-focused = %name%
;label-focused-underline = ${colors.05}
;label-focused-padding = 1
;label-occupied = %name%
;label-occupied-underline = ${colors.02}
;label-occupied-padding = 1
;label-urgent = %name%
;label-empty = %name%
;label-empty-padding = 1
;label-empty-foreground = ${colors.08}
;label-separator = |
;label-separator-foreground = ${colors.foreground}
###
label-focused = "  "
label-focused-foreground = ${colors.05}
label-focused-background = ${colors.background}

label-occupied = "  "
label-occupied-foreground = ${colors.02}
