
[colors]
xcolor0 = ${xrdb:color0:#111}
xcolor1 = ${xrdb:color1:#222}
xcolor3 = ${xrdb:color3:#222}
xcolor4 = ${xrdb:color4:#222}
xcolor5 = ${xrdb:color5:#222}
xcolor6 = ${xrdb:color6:#333}
xcolor7 = ${xrdb:color7:#333}
alert   = #AF5454

[settings]
screenchange-reload = true

[global/wm]
;margin-top = 3
;margin-bottom = 3

[bar/main]
;monitor = ${env:MONITOR}
bottom = true
width = 100%
height = 25
;offset-x = 1%
offset-y = 0%
radius = 0.0
fixed-center = true

background = ${colors.xcolor0}
foreground = ${colors.xcolor7}

line-size = 2
line-color = #f00

;border-bottom = 0
;border-top = 15
;border-right = 25
;border-left = 25
border-size = 0
border-color = #00000000

padding-left = 1
padding-right = 2
padding-top = 2
padding-bottom = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "Fira Sans:weight=Regular:size=10.5;3"
font-1 = "FontAwesome:pixelsize=12;2"
font-2 = "Geforce:style=Bold:pixelsize=12;2.5"
font-3 = "Spy Agency:style=Regular:pixelsize=12;3"

modules-left = bspwm
;modules-center = 
modules-right = cpu-temp gpu-temp pulseaudio date powermenu
; cpu xwindow vpncheck

wm-restack = bspwm
tray-position = right

;fix tray position
;override-redirect = true

tray-detached = false
;tray-position =
;tray-offset-x = 0
;tray-offset-y = 0
;tray-maxsize = 16
;tray-padding = 0
;tray-scale = 1
tray-background = ${colors.xcolor0}

;xwindow
[module/xwindow]
type = internal/xwindow
;format-prefix = "  "

format-prefix-foreground = ${colors.xcolor7}
format-prefix-background = ${colors.xcolor0}

label = "%title:0:35:..% "
label-font = 5
label-foreground = ${colors.xcolor7}
label-background = ${colors.xcolor0}

labal-maxlen = 25
format-pading = 2

[module/bspwm]
type = internal/bspwm

;ws-icon-0 = I;
;ws-icon-1 = II;
;ws-icon-2 = III;
;ws-icon-3 = IV;
;ws-icon-4 = V;

label-focused = 
label-focused-foreground = ${colors.xcolor7}
label-focused-background = ${colors.xcolor0}
label-focused-underline= ${colors.xcolor6}
label-focused-padding = 1

label-occupied = 
label-occupied-padding = 1
label-occupied-foreground = ${colors.xcolor4}

label-urgent = !
label-urgent-background = ${colors.xcolor0}
label-urgent-padding = 1

label-empty = 
label-empty-foreground = ${colors.xcolor1}
label-empty-padding = 1

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

; Seconds to sleep between progressbar/song timer sync, Default: 1
interval = 2

format-online = <label-song>
format-online-prefix = " "
format-online-prefix-foreground = ${colors.xcolor1}

label-song = %artist% - %title%
label-offline = mpd is offline

[module/current-song-spotify]
type = custom/script
exec = ~/scripts/spotify.sh %artist% - %title%
tail = true
interval = 2

[module/cpu]
type = internal/cpu
interval = 2
;format-prefix = " "
format-prefix-foreground = ${colors.xcolor7}

format = <label>
format-foreground = ${colors.xcolor7}

label = %{T4}RYZEN %{T-}%percentage%%

[module/cpu-temp]
type = internal/temperature

interval = 1
warn-temperature = 60

format = %{T4}RYZEN <ramp>%{T-} <label>
format-warn = %{T4}<ramp>%{T-} <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

[module/gpu-temp]
type = custom/script

exec = nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits
interval = 2

label = %{T3}GEFORCE %{T-} %output%°C

[module/pulseaudio]
type = internal/pulseaudio
; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
; sink = alsa_output.pci-0000_12_00.3.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <label-volume>
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.xcolor1}

format-muted = <label-muted>
format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.xcolor1}

label-volume = %percentage%%
label-volume-foreground = ${colors.xcolor7}

label-muted = muted
label-muted-foreground = ${colors.xcolor4}

[module/vpncheck]
type = custom/script
exec = sh ~/scripts/vpncheck.sh
format-foreground = ${colors.xcolor7}
interval = 5

[module/time]
type = internal/date
interval = 5
time = %I:%M
time-alt = %H:%M:%S
format-prefix-foreground = ${colors.xcolor7}
label = %time%

[module/date]
type = internal/date
interval = 1

format-prefix-foreground = ${colors.xcolor1}
format-prefix = ""
format-foreground = ${colors.xcolor7}

time = "%I:%M %p"
time-alt = "%A, %d-%B-%y"
label = " %date%%time% "

[module/powermenu]
type = custom/menu

format-spacing = 2

label-open = ""
;label-open = "「⍴ower」"

label-open-background = ${colors.xcolor0}
label-close = cancel
label-close-foreground = ${colors.xcolor7}
label-separator = |
label-separator-foreground = ${colors.xcolor7}

;menu-0-0 = 
;menu-0-0-exec = systemctl suspend
menu-0-0 = 
menu-0-0-exec = bspc quit
menu-0-1 = 
menu-0-1-exec = systemctl reboot
menu-0-2 =  
menu-0-2-exec = systemctl poweroff