#avoid flicker
double_buffer yes

#own window to run simultanious 2 or more conkys
own_window  yes
own_window_transparent no
own_window_type override
own_window_hints sticky,skip_taskbar,skip_pager

#shades
draw_shades no

#position
gap_x 0
gap_y 4
alignment bottom_middle

#behaviour
update_interval 1

#colour
default_color 757575
#default_shade_color 000000
own_window_colour 303030
#font
use_xft yes
xftfont Terminus:size=13

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

#to prevent window from moving
use_spacer none
minimum_size 1920 0

#mpd
#mpd_host localhost
#mpd_port 6600

TEXT
${alignc} ${color C04BC8}Cpu:${color} ${color white}${cpu}%${color}  ${color C04BC8}Ram: ${color white}${memperc}%${color}  ${color C04BC8}Disk: ${color white}${fs_used_perc /}%${color}  ${color C04BC8}Nvidia:${color} ${color white}${hwmon temp 1}°C${color}  ${color C04BC8}Cpu:${color white} ${acpitemp}°C${color}${alignc}