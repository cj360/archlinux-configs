! ------------------------------------------------------------------------------
! URxvt settings
! ------------------------------------------------------------------------------

Xft.dpi:                 96
Xft.antialias:           true
Xft.hinting:             true
Xft.rgba:                rgb
Xft.autohint:            false
Xft.hintstyle:           hintslight
Xft.lcdfilter:           lcddefault

URxvt*font:              xft:Hack:size=12,xft:FontAwesome:style=Regular,xft:unifont
URxvt*boldFont:          xft:Hack:size=12
!URxvt.iconFile:          /usr/share/icons/Papirus-GTK/32x32/apps/xterm.svg
URxvt.insecure:          false
URxvt*loginShell:        true
URxvt*cursorUnderline:   true
URxvt*scrollBar:         false 
URxvt*letterSpace:       -1
URxvt*termName:          rxvt
URxvt.buffered:          true
URxvt.matcher.button:    1 
URxvt.transparent:       false
URxvt.shading:           5
URxvt*iso14755:          false
rxvt.saveLines:          900000
URxvt*scrollTtyOutput:   false
URxvt*scrollWithBuffer:  true
URxvt*scrollTtyKeypress: true

URxvt.perl-ext-common:        default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher:    firefox
URxvt.url-select.underline:   true
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
!URxvt*keysym.Shift-Control-C: perl:clipboard:copy
!URxvt*keysym.Shift-Control-V: perl:clipboard:paste


! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window: argb:FF010205, #010205, #68815E
rofi.color-normal: argb:FF010205, #AEC19C, #010205, #68815E, #010205
rofi.color-active: argb:FF010205, #AEC19C, #010205, #68815E, #010205
rofi.color-urgent: argb:FF010205, #516C59, #010205, #516C59, #AEC19C